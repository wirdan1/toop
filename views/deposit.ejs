<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposit - PAYMU</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Montserrat:wght@700;800;900&display=swap');
        :root {
            --primary-color: #4F46E5; /* Indigo */
            --primary-hover: #4338CA;
            --secondary-color: #10B981; /* Emerald */
            --accent-color: #06B6D4; /* Cyan */
            --bg-color: #0F172A; /* Slate 900 */
            --card-bg: #1E293B; /* Slate 800 */
            --text-color: #F1F5F9; /* Slate 100 */
            --text-muted: #94A3B8; /* Slate 400 */
            --input-bg: #334155; /* Slate 700 */
            --success-color: #10B981; /* Emerald 500 */
            --error-color: #EF4444; /* Red 500 */
            --border-color: #475569; /* Slate 600 */
            --font-main: 'Poppins', sans-serif;
            --font-display: 'Montserrat', sans-serif;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { 
            font-family: var(--font-main); 
            background: linear-gradient(135deg, var(--bg-color) 0%, #131f38 100%);
            color: var(--text-color); 
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        header {
            padding: 20px 0;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            font-family: var(--font-display);
            font-size: 2em;
            font-weight: 900;
            color: var(--text-color);
            text-decoration: none;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
        }
        .logo i {
            margin-right: 10px;
            font-size: 0.9em;
            -webkit-text-fill-color: var(--primary-color);
        }
        .nav-links {
            display: flex;
            gap: 20px;
        }
        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
            padding: 8px 12px;
            border-radius: 8px;
        }
        .nav-links a:hover {
            color: var(--accent-color);
            background-color: rgba(255,255,255,0.05);
        }
        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .user-balance {
            background-color: rgba(16, 185, 129, 0.2);
            color: var(--success-color);
            padding: 8px 15px;
            border-radius: 8px;
            font-weight: 600;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: none;
            font-family: var(--font-main);
        }
        .btn i {
            margin-right: 8px;
        }
        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(79, 70, 229, 0.4);
        }
        .btn-outline {
            background: transparent;
            color: var(--text-color);
            border: 1px solid var(--border-color);
        }
        .btn-outline:hover {
            background-color: rgba(255,255,255,0.05);
            border-color: var(--accent-color);
        }
        .page-header {
            padding: 40px 0 30px;
            text-align: center;
        }
        .page-title {
            font-family: var(--font-display);
            font-size: 2.2em;
            font-weight: 800;
            margin-bottom: 10px;
        }
        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1em;
        }
        .deposit-container {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
            margin: 40px 0 80px;
        }
        .deposit-form {
            flex: 1;
            min-width: 300px;
        }
        .deposit-qris {
            flex: 1;
            min-width: 300px;
        }
        .form-card {
            background: linear-gradient(145deg, var(--card-bg), #253654);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }
        .form-title {
            font-size: 1.3em;
            font-weight: 700;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
        }
        .form-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-group input {
            width: 100%;
            padding: 15px;
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            color: var(--text-color);
            font-size: 1em;
            font-family: var(--font-main);
            transition: all 0.3s ease;
        }
        .form-group input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.3);
        }
        .amount-presets {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-bottom: 20px;
        }
        .amount-preset {
            padding: 12px;
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .amount-preset:hover {
            background-color: rgba(79, 70, 229, 0.2);
            border-color: var(--primary-color);
        }
        .amount-preset.active {
            background-color: rgba(79, 70, 229, 0.3);
            border-color: var(--primary-color);
            font-weight: 600;
        }
        .qris-result {
            text-align: center;
            display: none;
        }
        .qris-title {
            font-size: 1.3em;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .qris-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }
        .qris-image {
            max-width: 250px;
            width: 100%;
            height: auto;
            background-color: white;
            padding: 15px;
            border-radius: 12px;
            margin: 20px auto;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .qris-amount {
            font-size: 1.2em;
            font-weight: 700;
            margin-bottom: 20px;
        }
        .qris-amount span {
            color: var(--success-color);
        }
        .qris-instructions {
            background-color: rgba(30, 41, 59, 0.7);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: left;
        }
        .qris-instructions h3 {
            font-size: 1.1em;
            margin-bottom: 10px;
            color: var(--accent-color);
        }
        .qris-instructions ol {
            padding-left: 20px;
            color: var(--text-muted);
        }
        .qris-instructions li {
            margin-bottom: 8px;
        }
        .confirm-payment {
            margin-top: 20px;
        }
        .loading-spinner {
            display: none;
            width: 40px;
            height: 40px;
            margin: 20px auto;
            position: relative;
        }
        .loading-spinner div {
            box-sizing: border-box;
            display: block;
            position: absolute;
            width: 32px;
            height: 32px;
            margin: 4px;
            border: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: loading-spinner 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
            border-color: var(--primary-color) transparent transparent transparent;
        }
        .loading-spinner div:nth-child(1) {
            animation-delay: -0.45s;
        }
        .loading-spinner div:nth-child(2) {
            animation-delay: -0.3s;
        }
        .loading-spinner div:nth-child(3) {
            animation-delay: -0.15s;
        }
        @keyframes loading-spinner {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .message {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
        }
        .message.error {
            background-color: rgba(239, 68, 68, 0.2);
            color: #FCA5A5;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }
        .message.success {
            background-color: rgba(16, 185, 129, 0.2);
            color: #6EE7B7;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 20px;
            }
            .nav-links {
                margin: 15px 0;
            }
            .deposit-container {
                flex-direction: column;
            }
            .page-title {
                font-size: 1.8em;
            }
        }
        
        @media (max-width: 480px) {
            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }
            .user-info {
                flex-direction: column;
            }
            .amount-presets {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo"><i class="fas fa-bolt-lightning"></i> PAYMU</a>
                
                <nav class="nav-links">
                    <a href="/"><i class="fas fa-home"></i> Home</a>
                    <a href="/dashboard"><i class="fas fa-user"></i> Dashboard</a>
                    <a href="/transactions"><i class="fas fa-history"></i> Transaksi</a>
                </nav>
                
                <div class="user-info">
                    <div class="user-balance">
                        <i class="fas fa-wallet"></i> Rp <%= user.balance.toLocaleString('id-ID') %>
                    </div>
                    <a href="/deposit" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Deposit
                    </a>
                    <a href="/logout" class="btn btn-outline">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </header>
    
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Deposit Saldo</h1>
            <p class="page-subtitle">Tambah saldo untuk melakukan top up game</p>
        </div>
        
        <div id="message" class="message"></div>
        
        <div class="deposit-container">
            <div class="deposit-form">
                <div class="form-card">
                    <h2 class="form-title"><i class="fas fa-money-bill-wave"></i> Pilih Jumlah</h2>
                    
                    <div class="amount-presets">
                        <div class="amount-preset" data-amount="10000">Rp 10.000</div>
                        <div class="amount-preset" data-amount="20000">Rp 20.000</div>
                        <div class="amount-preset" data-amount="50000">Rp 50.000</div>
                        <div class="amount-preset" data-amount="100000">Rp 100.000</div>
                        <div class="amount-preset" data-amount="200000">Rp 200.000</div>
                        <div class="amount-preset" data-amount="500000">Rp 500.000</div>
                    </div>
                    
                    <div class="form-group">
                        <label for="amount">Jumlah Deposit</label>
                        <input type="number" id="amount" placeholder="Masukkan jumlah" min="10000" step="1000">
                    </div>
                    
                    <button id="generateQrisBtn" class="btn btn-primary">
                        <i class="fas fa-qrcode"></i> Generate QRIS
                    </button>
                </div>
            </div>
            
            <div class="deposit-qris">
                <div class="form-card">
                    <div id="qrisPlaceholder">
                        <h2 class="form-title"><i class="fas fa-info-circle"></i> Informasi Pembayaran</h2>
                        <p style="color: var(--text-muted); margin-bottom: 15px;">Pilih jumlah deposit dan klik tombol Generate QRIS untuk menampilkan kode pembayaran.</p>
                        
                        <div style="background-color: rgba(30, 41, 59, 0.7); padding: 15px; border-radius: 10px;">
                            <h3 style="font-size: 1.1em; margin-bottom: 10px; color: var(--accent-color);">Merchant Info</h3>
                            <p style="margin-bottom: 8px;"><i class="fas fa-store" style="width: 20px;"></i> <%= merchantName %></p>
                            <p><i class="fas fa-map-marker-alt" style="width: 20px;"></i> <%= merchantCity %></p>
                        </div>
                    </div>
                    
                    <div id="qrisResult" class="qris-result">
                        <h2 class="qris-title"><i class="fas fa-qrcode"></i> Scan QRIS</h2>
                        
                        <img id="qrisImage" class="qris-image" src="/placeholder.svg" alt="QRIS Code">
                        
                        <p class="qris-amount">Total: <span id="qrisAmount">Rp 0</span></p>
                        
                        <div class="qris-instructions">
                            <h3><i class="fas fa-info-circle"></i> Cara Pembayaran:</h3>
                            <ol>
                                <li>Buka aplikasi e-wallet atau mobile banking Anda</li>
                                <li>Pilih menu Scan QRIS atau Scan QR</li>
                                <li>Scan kode QR di atas</li>
                                <li>Periksa detail transaksi dan konfirmasi pembayaran</li>
                                <li>Setelah pembayaran berhasil, klik tombol "Konfirmasi Pembayaran" di bawah</li>
                            </ol>
                        </div>
                        
                        <div class="confirm-payment">
                            <button id="confirmPaymentBtn" class="btn btn-primary">
                                <i class="fas fa-check-circle"></i> Konfirmasi Pembayaran
                            </button>
                        </div>
                    </div>
                    
                    <div id="loadingSpinner" class="loading-spinner">
                        <div></div>
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const amountInput = document.getElementById('amount');
            const amountPresets = document.querySelectorAll('.amount-preset');
            const generateQrisBtn = document.getElementById('generateQrisBtn');
            const confirmPaymentBtn = document.getElementById('confirmPaymentBtn');
            const qrisPlaceholder = document.getElementById('qrisPlaceholder');
            const qrisResult = document.getElementById('qrisResult');
            const qrisImage = document.getElementById('qrisImage');
            const qrisAmount = document.getElementById('qrisAmount');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const messageDiv = document.getElementById('message');
            
            let currentTransactionId = null;
            
            // Amount presets
            amountPresets.forEach(preset => {
                preset.addEventListener('click', function() {
                    const amount = this.getAttribute('data-amount');
                    amountInput.value = amount;
                    
                    // Remove active class from all presets
                    amountPresets.forEach(p => p.classList.remove('active'));
                    
                    // Add active class to clicked preset
                    this.classList.add('active');
                });
            });
            
            // Generate QRIS
            generateQrisBtn.addEventListener('click', async function() {
                const amount = amountInput.value;
                
                if (!amount || isNaN(amount) || parseFloat(amount) < 10000) {
                    showMessage('Jumlah deposit minimal Rp 10.000', 'error');
                    return;
                }
                
                showLoading(true);
                hideMessage();
                
                try {
                    const response = await fetch('/generate-qris', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ amount })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        qrisImage.src = data.qrImage;
                        qrisAmount.textContent = `Rp ${parseFloat(data.amount).toLocaleString('id-ID')}`;
                        currentTransactionId = data.transactionId;
                        
                        qrisPlaceholder.style.display = 'none';
                        qrisResult.style.display = 'block';
                    } else {
                        showMessage(data.message || 'Gagal membuat QRIS', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showMessage('Terjadi kesalahan. Coba lagi nanti.', 'error');
                } finally {
                    showLoading(false);
                }
            });
            
            // Confirm payment
            confirmPaymentBtn.addEventListener('click', async function() {
                if (!currentTransactionId) {
                    showMessage('Transaksi tidak valid', 'error');
                    return;
                }
                
                showLoading(true);
                hideMessage();
                
                try {
                    const response = await fetch('/confirm-payment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ transactionId: currentTransactionId })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        showMessage('Pembayaran berhasil! Saldo Anda telah diperbarui.', 'success');
                        
                        // Reset form
                        qrisPlaceholder.style.display = 'block';
                        qrisResult.style.display = 'none';
                        amountInput.value = '';
                        amountPresets.forEach(p => p.classList.remove('active'));
                        currentTransactionId = null;
                        
                        // Update balance in header
                        const balanceElement = document.querySelector('.user-balance');
                        if (balanceElement) {
                            balanceElement.innerHTML = `<i class="fas fa-wallet"></i> Rp ${data.newBalance.toLocaleString('id-ID')}`;
                        }
                        
                        // Redirect to dashboard after 2 seconds
                        setTimeout(() => {
                            window.location.href = '/dashboard';
                        }, 2000);
                    } else {
                        showMessage(data.message || 'Gagal mengonfirmasi pembayaran', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showMessage('Terjadi kesalahan. Coba lagi nanti.', 'error');
                } finally {
                    showLoading(false);
                }
            });
            
            // Helper functions
            function showLoading(show) {
                loadingSpinner.style.display = show ? 'block' : 'none';
                generateQrisBtn.disabled = show;
                confirmPaymentBtn.disabled = show;
            }
            
            function showMessage(message, type) {
                messageDiv.textContent = message;
                messageDiv.className = `message ${type}`;
                messageDiv.style.display = 'block';
            }
            
            function hideMessage() {
                messageDiv.style.display = 'none';
            }
        });
    </script>
</body>
</html>
