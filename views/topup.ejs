<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Up <%= game.name %> - PAYMU</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Montserrat:wght@700;800;900&display=swap');
        :root {
            --primary-color: #4F46E5; /* Indigo */
            --primary-hover: #4338CA;
            --secondary-color: #10B981; /* Emerald */
            --accent-color: #06B6D4; /* Cyan */
            --bg-color: #0F172A; /* Slate 900 */
            --card-bg: #1E293B; /* Slate 800 */
            --text-color: #F1F5F9; /* Slate 100 */
            --text-muted: #94A3B8; /* Slate 400 */
            --input-bg: #334155; /* Slate 700 */
            --success-color: #10B981; /* Emerald 500 */
            --error-color: #EF4444; /* Red 500 */
            --border-color: #475569; /* Slate 600 */
            --font-main: 'Poppins', sans-serif;
            --font-display: 'Montserrat', sans-serif;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { 
            font-family: var(--font-main); 
            background: linear-gradient(135deg, var(--bg-color) 0%, #131f38 100%);
            color: var(--text-color); 
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        header {
            padding: 20px 0;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            font-family: var(--font-display);
            font-size: 2em;
            font-weight: 900;
            color: var(--text-color);
            text-decoration: none;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
        }
        .logo i {
            margin-right: 10px;
            font-size: 0.9em;
            -webkit-text-fill-color: var(--primary-color);
        }
        .nav-links {
            display: flex;
            gap: 20px;
        }
        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
            padding: 8px 12px;
            border-radius: 8px;
        }
        .nav-links a:hover {
            color: var(--accent-color);
            background-color: rgba(255,255,255,0.05);
        }
        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .user-balance {
            background-color: rgba(16, 185, 129, 0.2);
            color: var(--success-color);
            padding: 8px 15px;
            border-radius: 8px;
            font-weight: 600;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: none;
            font-family: var(--font-main);
        }
        .btn i {
            margin-right: 8px;
        }
        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            color: white;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(79, 70, 229, 0.4);
        }
        .btn-outline {
            background: transparent;
            color: var(--text-color);
            border: 1px solid var(--border-color);
        }
        .btn-outline:hover {
            background-color: rgba(255,255,255,0.05);
            border-color: var(--accent-color);
        }
        .game-header {
            padding: 40px 0;
            display: flex;
            align-items: center;
            gap: 30px;
        }
        .game-image {
            width: 120px;
            height: 120px;
            border-radius: 20px;
            object-fit: cover;
            border: 3px solid var(--accent-color);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }
        .game-info h1 {
            font-family: var(--font-display);
            font-size: 2.2em;
            font-weight: 800;
            margin-bottom: 10px;
        }
        .game-info p {
            color: var(--text-muted);
            font-size: 1.1em;
        }
        .topup-container {
            display: flex;
            flex-wrap: wrap;
            gap: 40px;
            margin-bottom: 80px;
        }
        .topup-form {
            flex: 1;
            min-width: 300px;
        }
        .topup-packages {
            flex: 1;
            min-width: 300px;
        }
        .form-card {
            background: linear-gradient(145deg, var(--card-bg), #253654);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }
        .form-title {
            font-size: 1.3em;
            font-weight: 700;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
        }
        .form-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-group input {
            width: 100%;
            padding: 15px;
            background-color: var(--input-bg);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            color: var(--text-color);
            font-size: 1em;
            font-family: var(--font-main);
            transition: all 0.3s ease;
        }
        .form-group input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.3);
        }
        .packages-grid {
            display: grid;
            gap: 15px;
        }
        .package-card {
            background-color: rgba(30, 41, 59, 0.7);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .package-card:hover {
            transform: translateY(-5px);
            border-color: var(--accent-color);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .package-card.selected {
            background-color: rgba(79, 70, 229, 0.2);
            border-color: var(--primary-color);
        }
        .package-card.selected::after {
            content: '\f00c';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            top: 10px;
            right: 10px;
            color: var(--success-color);
            background-color: rgba(16, 185, 129, 0.2);
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8em;
        }
        .package-name {
            font-weight: 700;
            font-size: 1.1em;
            margin-bottom: 10px;
        }
        .package-amount {
            color: var(--accent-color);
            font-weight: 600;
            margin-bottom: 15px;
            font-size: 1.2em;
        }
        .package-price {
            color: var(--text-muted);
            font-size: 0.9em;
        }
        .loading-spinner {
            display: none;
            width: 40px;
            height: 40px;
            margin: 20px auto;
            position: relative;
        }
        .loading-spinner div {
            box-sizing: border-box;
            display: block;
            position: absolute;
            width: 32px;
            height: 32px;
            margin: 4px;
            border: 4px solid var(--primary-color);
            border-radius: 50%;
            animation: loading-spinner 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
            border-color: var(--primary-color) transparent transparent transparent;
        }
        .loading-spinner div:nth-child(1) {
            animation-delay: -0.45s;
        }
        .loading-spinner div:nth-child(2) {
            animation-delay: -0.3s;
        }
        .loading-spinner div:nth-child(3) {
            animation-delay: -0.15s;
        }
        @keyframes loading-spinner {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .message {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
        }
        .message.error {
            background-color: rgba(239, 68, 68, 0.2);
            color: #FCA5A5;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }
        .message.success {
            background-color: rgba(16, 185, 129, 0.2);
            color: #6EE7B7;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }
        .success-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(15, 23, 42, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        .success-modal.active {
            opacity: 1;
            visibility: visible;
        }
        .success-content {
            background: linear-gradient(145deg, var(--card-bg), #253654);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            transform: translateY(20px);
            transition: all 0.3s ease;
        }
        .success-modal.active .success-content {
            transform: translateY(0);
        }
        .success-icon {
            width: 80px;
            height: 80px;
            background-color: rgba(16, 185, 129, 0.2);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto 20px;
            color: var(--success-color);
            font-size: 2em;
        }
        .success-title {
            font-family: var(--font-display);
            font-size: 1.8em;
            font-weight: 800;
            margin-bottom: 15px;
        }
        .success-message {
            color: var(--text-muted);
            margin-bottom: 30px;
            line-height: 1.6;
        }
        .success-details {
            background-color: rgba(30, 41, 59, 0.7);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 30px;
            text-align: left;
        }
        .success-details p {
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
        }
        .success-details p span:last-child {
            font-weight: 600;
            color: var(--text-color);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 20px;
            }
            .nav-links {
                margin: 15px 0;
            }
            .game-header {
                flex-direction: column;
                text-align: center;
            }
            .topup-container {
                flex-direction: column;
            }
        }
        
        @media (max-width: 480px) {
            .nav-links {
                flex-wrap: wrap;
                justify-content: center;
            }
            .user-info {
                flex-direction: column;
            }
            .game-info h1 {
                font-size: 1.8em;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo"><i class="fas fa-bolt-lightning"></i> PAYMU</a>
                
                <nav class="nav-links">
                    <a href="/"><i class="fas fa-home"></i> Home</a>
                    <a href="/dashboard"><i class="fas fa-user"></i> Dashboard</a>
                    <a href="/transactions"><i class="fas fa-history"></i> Transaksi</a>
                </nav>
                
                <div class="user-info">
                    <div class="user-balance">
                        <i class="fas fa-wallet"></i> Rp <%= user.balance.toLocaleString('id-ID') %>
                    </div>
                    <a href="/deposit" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Deposit
                    </a>
                    <a href="/logout" class="btn btn-outline">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </header>
    
    <div class="container">
        <div class="game-header">
            <img src="<%= game.image %>" alt="<%= game.name %>" class="game-image">
            
            <div class="game-info">
                <h1>Top Up <%= game.name %></h1>
                <p>Pilih paket <%= game.currency %> yang Anda inginkan</p>
            </div>
        </div>
        
        <div id="message" class="message"></div>
        
        <div class="topup-container">
            <div class="topup-form">
                <div class="form-card">
                    <h2 class="form-title"><i class="fas fa-user-tag"></i> Informasi Akun Game</h2>
                    
                    <div class="form-group">
                        <label for="gameUserId">User ID</label>
                        <input type="text" id="gameUserId" placeholder="Masukkan User ID" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="gameServer">Server (opsional)</label>
                        <input type="text" id="gameServer" placeholder="Masukkan Server ID jika ada">
                    </div>
                    
                    <div class="form-note" style="margin-bottom: 20px; color: var(--text-muted); font-size: 0.9em;">
                        <i class="fas fa-info-circle"></i> Pastikan User ID yang Anda masukkan sudah benar. Kesalahan input User ID dapat menyebabkan kegagalan top up.
                    </div>
                    
                    <button id="processTopupBtn" class="btn btn-primary">
                        <i class="fas fa-shopping-cart"></i> Proses Top Up
                    </button>
                </div>
            </div>
            
            <div class="topup-packages">
                <div class="form-card">
                    <h2 class="form-title"><i class="fas fa-tags"></i> Pilih Paket</h2>
                    
                    <div class="packages-grid">
                        <% packages.forEach(pkg => { %>
                            <div class="package-card" data-id="<%= pkg.id %>" data-name="<%= pkg.name %>" data-amount="<%= pkg.amount %>" data-price="<%= pkg.price %>">
                                <div class="package-name"><%= pkg.name %></div>
                                <div class="package-amount"><i class="fas fa-coins"></i> <%= pkg.amount %> <%= game.currency %></div>
                                <div class="package-price">Rp <%= pkg.price.toLocaleString('id-ID') %></div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="loadingSpinner" class="loading-spinner">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    
    <div id="successModal" class="success-modal">
        <div class="success-content">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            
            <h2 class="success-title">Top Up Berhasil!</h2>
            <p class="success-message">Permintaan top up Anda telah berhasil diproses. <%= game.currency %> akan segera ditambahkan ke akun game Anda.</p>
            
            <div class="success-details">
                <p>
                    <span>Game:</span>
                    <span id="successGame"><%= game.name %></span>
                </p>
                <p>
                    <span>User ID:</span>
                    <span id="successUserId"></span>
                </p>
                <p>
                    <span>Paket:</span>
                    <span id="successPackage"></span>
                </p>
                <p>
                    <span>Jumlah:</span>
                    <span id="successAmount"></span>
                </p>
                <p>
                    <span>Harga:</span>
                    <span id="successPrice"></span>
                </p>
            </div>
            
            <div class="success-actions">
                <a href="/dashboard" class="btn btn-primary">
                    <i class="fas fa-home"></i> Kembali ke Dashboard
                </a>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const gameUserIdInput = document.getElementById('gameUserId');
            const gameServerInput = document.getElementById('gameServer');
            const packageCards = document.querySelectorAll('.package-card');
            const processTopupBtn = document.getElementById('processTopupBtn');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const messageDiv = document.getElementById('message');
            const successModal = document.getElementById('successModal');
            
            let selectedPackage = null;
            
            // Select package
            packageCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    packageCards.forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Store selected package data
                    selectedPackage = {
                        id: this.getAttribute('data-id'),
                        name: this.getAttribute('data-name'),
                        amount: this.getAttribute('data-amount'),
                        price: this.getAttribute('data-price')
                    };
                });
            });
            
            // Process top up
            processTopupBtn.addEventListener('click', async function() {
                const gameUserId = gameUserIdInput.value.trim();
                const gameServer = gameServerInput.value.trim();
                
                if (!gameUserId) {
                    showMessage('User ID tidak boleh kosong', 'error');
                    return;
                }
                
                if (!selectedPackage) {
                    showMessage('Silakan pilih paket terlebih dahulu', 'error');
                    return;
                }
                
                showLoading(true);
                hideMessage();
                
                try {
                    const response = await fetch('/process-topup', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            gameId: '<%= game.id %>',
                            packageId: selectedPackage.id,
                            gameUserId: gameUserId,
                            gameServer: gameServer
                        })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        // Update success modal
                        document.getElementById('successUserId').textContent = gameUserId + (gameServer ? ` (${gameServer})` : '');
                        document.getElementById('successPackage').textContent = data.transaction.packageName;
                        document.getElementById('successAmount').textContent = `${data.transaction.amount} <%= game.currency %>`;
                        document.getElementById('successPrice').textContent = `Rp ${data.transaction.price.toLocaleString('id-ID')}`;
                        
                        // Update balance in header
                        const balanceElement = document.querySelector('.user-balance');
                        if (balanceElement) {
                            balanceElement.innerHTML = `<i class="fas fa-wallet"></i> Rp ${data.newBalance.toLocale
